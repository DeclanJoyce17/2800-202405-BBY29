<%- include("templates/header") %>
  <!-- nav bar -->
  <nav>
    <br>
    <a href="fitTasks">
      <input type="image" class="navButton" src="../img/FitnessButton.png">
    </a>
    <a href="fitTasks">
      <input type="image" class="navButton" src="../img/EcoButton.png">
    </a>
    <a href="fitTasks">
      <input type="image" class="navButton" src="../img/DietButton.png">
    </a>
  </nav>
 


  <!-- Chatbot -->
  <form id="form">
    <label for="chatbot">Ask me</label>
    <input type="text" id="question" name="chatbot">
    <button type="submit">Send</button>
  </form>
  <div id='response'></div>

  <!-- Welcome messsge -->
  <div class="px-4 py-5 my-5 text-center">
    <h4 style="margin-bottom: 5%;" class="display-4">Are you ready to tackle the day, <!-- USERNAME_PLACEHOLDER -->?
      <!-- <span id="name-goes-here"><%= username %></span>? -->
    </h4>
    <div class="col-lg-6 mx-auto">
      <div class="navText">
        <h1>Rank:<%= rank %></h1>
        <h1>Points:<%= points %></h1>
      </div>
      
    </div>

  <!-- Leader board -->
  <div id="main">
    <div id="header">
      <h1>Ranking</h1>
      <button class="share">
        <i class="ph ph-share-network"></i>
      </button>
    </div>
    <div id="leaderboard">
      <div class="ribbon "></div>
      <table>
          <% users.forEach(function(user, index) { %>
            <tr>
              <td class="number"><%= index + 1 %></td>
              <td class="profile-image">
                <img src="./images/<%= userId %>" width="50" height="50" alt="Profile Image" />
              </td>
              <td class="name"><%= user.name %></td>
              <td class="points">
                <%= user.points.toFixed(3) %>
                <% if (index === 0) { %>
                  <img class="gold-medal"
                  src="https://github.com/malunaridev/Challenges-iCodeThis/blob/master/4-leaderboard/assets/gold-medal.png?raw=true"
                  alt="gold medal" />
                <% } %>
              </td>
            </tr>
          <% }); %>
      </table>
    </div>
  </div>

  <ul><!-- TASKS_PLACEHOLDER --></ul>

  
  <br><a href="/logout"><button class="btn btn-secondary float-right" type="submit">Log Out</button></a>
  
    <form action="/signup" method="get" class="index-form">
        <button type="submit" class="index-btn">Signup</button>
      </form>

<!-- Footer -->
  <%- include("templates/footer") %>