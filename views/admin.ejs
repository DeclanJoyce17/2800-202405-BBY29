<%- include("templates/headerOld") %>
   <style>
    /* Basic Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f4f4f4;
    color: #333;
}



/* Container */
.container {
    width: 80%;
    margin: 0 auto;
    padding: 1px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    border-radius: 5px;
    margin-top: 15px;
}

/* Title */
.title {
    font-size: 20pt;
    margin-bottom: 10px;
    color: #333;
    text-align: center;
}

/* Divider */
.divider {
    border: 0;
    height: 1px;
    background: #ddd;
    margin: 2px 0;
}

/* User List */
.user-list {
    list-style: none;
    padding: 0;
}

.user-list li {
    padding: 10px;
    border-bottom: 1px solid #ddd;
}

.user-list li:last-child {
    border-bottom: none;
}

/* User Template Styling (if needed) */
.user-list .user {
    display: flex;
    align-items: center;
}

.user-list .user img {
    border-radius: 50%;
    margin-right: 1px;
}

.user-list .user .user-info {
    display: flex;
    flex-direction: column;
}

.user-list .user .user-info h2 {
    margin: 0;
    font-size: 1.2em;
    color: #333;
}
.back-button {
            position: absolute;
            top: 19px;
            left: 45px;
            background-color: #FF8246;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            padding: 8px 13px;
            font-size: 10pt;
            cursor: pointer;
            text-decoration: none;
        }

        .back-button:hover {
            background-color: #ee6525;
        }


   </style> 
    <div class="container">
        <a href="/profile" class="back-button">Back to Profile</a>
        <h1 class="title">Users</h1>
        <hr class="divider">
        
        <ol class="user-list">
            <% for(let i=0; i < users.length; i++) { %>
                <%- include('templates/user', {user: users[i]}) %>
            <% } %>
        </ol>
    </div>
    
    <%- include("templates/end") %>
